<DefaultWindow
    xmlns="https://spacestation14.io"
    Title="{Loc admin-notify-title}"
    MinWidth="500">
    <GridContainer Columns="1">
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
            <Label Text="{Loc admin-notify-target-label}" VerticalAlignment="Center"/>
            <LineEdit Name="Target" Access="Public" PlaceHolder="{Loc admin-notify-target-placeholder}" Text="all" HorizontalExpand="True" SizeFlagsStretchRatio="3"/>
        </BoxContainer>
        
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
            <Label Text="{Loc admin-notify-title-label}" VerticalAlignment="Center"/>
            <LineEdit Name="NotifyTitle" Access="Public" PlaceHolder="{Loc admin-notify-title-placeholder}" HorizontalExpand="True" SizeFlagsStretchRatio="3"/>
        </BoxContainer>
        
        <Label Text="{Loc admin-notify-message-label}"/>
        <TextEdit Name="Message" Access="Public" VerticalExpand="True" MinHeight="100"/>

        <GridContainer Rows="1">
            <CheckBox Name="KeepWindowOpen" Access="Public" Text="{Loc admin-notify-keep-open}" />
            <Button Name="NotifyButton" Access="Public" Disabled="True" Text="{Loc admin-notify-button}" HorizontalAlignment="Center"/>
        </GridContainer>
    </GridContainer>
</DefaultWindow>