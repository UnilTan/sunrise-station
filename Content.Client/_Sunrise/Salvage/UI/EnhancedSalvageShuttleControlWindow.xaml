<Presentation:FancyWindow xmlns="https://spacestation14.io"
                           xmlns:Presentation="clr-namespace:Content.Client.Computer"
                           Title="{Loc enhanced-salvage-shuttle-control-window-title}"
                           MinSize="500 400">
    <BoxContainer Orientation="Vertical" Margin="10">
        <Label Text="{Loc enhanced-salvage-shuttle-control-title}" 
               HorizontalAlignment="Center" Margin="0 0 0 15" FontSize="16"/>
        
        <!-- Mission Status Section -->
        <BoxContainer Orientation="Vertical" Margin="0 0 0 10">
            <Label Text="{Loc enhanced-salvage-shuttle-mission-status}" FontSize="14"/>
            <Label Name="MissionStatusLabel" Text="{Loc enhanced-salvage-shuttle-no-mission}" FontColorOverride="#FFFF00"/>
            <Label Name="MissionTypeLabel" Text="" FontColorOverride="#00FFFF"/>
        </BoxContainer>
        
        <!-- Timer Section -->
        <BoxContainer Orientation="Vertical" Margin="0 10 0 0">
            <Label Text="{Loc enhanced-salvage-shuttle-timer}" FontSize="14"/>
            <ProgressBar Name="TimerBar" Value="0" MinSize="0 20"/>
            <Label Name="TimerLabel" Text="--:--" HorizontalAlignment="Center" FontSize="18" FontColorOverride="#00FF00"/>
        </BoxContainer>
        
        <!-- Warning Section -->
        <BoxContainer Name="WarningContainer" Orientation="Vertical" Margin="0 10 0 0" Visible="False">
            <Label Text="{Loc enhanced-salvage-shuttle-warning}" FontColorOverride="#FF0000" FontSize="14"/>
            <Label Text="{Loc enhanced-salvage-shuttle-auto-return-warning}" FontColorOverride="#FF0000"/>
        </BoxContainer>
        
        <!-- Mission Type Selection -->
        <BoxContainer Name="MissionSelectionContainer" Orientation="Vertical" Margin="0 10 0 0">
            <Label Text="{Loc enhanced-salvage-shuttle-select-mission}" FontSize="14"/>
            <GridContainer Columns="2" HSeparationOverride="10" VSeparationOverride="5">
                <Button Name="MoneyMissionButton" Text="{Loc salvage-quota-mission-money}" />
                <Button Name="ResourcesMissionButton" Text="{Loc salvage-quota-mission-resources}" />
                <Button Name="ArtifactsMissionButton" Text="{Loc salvage-quota-mission-artifacts}" />
                <Button Name="MixedMissionButton" Text="{Loc salvage-quota-mission-mixed}" />
            </GridContainer>
        </BoxContainer>
        
        <!-- Control Buttons -->
        <BoxContainer Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 15 0 0">
            <Button Name="StartMissionButton" Text="{Loc enhanced-salvage-shuttle-start-mission}" MinSize="100 40" Margin="0 0 10 0"/>
            <Button Name="EndMissionButton" Text="{Loc enhanced-salvage-shuttle-end-mission}" MinSize="100 40" Margin="0 0 10 0"/>
            <Button Name="EmergencyButton" Text="{Loc enhanced-salvage-shuttle-emergency}" MinSize="120 40"/>
        </BoxContainer>
        
        <!-- Emergency Mode Indicator -->
        <BoxContainer Name="EmergencyContainer" Orientation="Vertical" Margin="0 10 0 0" Visible="False">
            <Label Text="{Loc enhanced-salvage-shuttle-emergency-active}" FontColorOverride="#FF8800" FontSize="14" HorizontalAlignment="Center"/>
        </BoxContainer>
    </BoxContainer>
</Presentation:FancyWindow>