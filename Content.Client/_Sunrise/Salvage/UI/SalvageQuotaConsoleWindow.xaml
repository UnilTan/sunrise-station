<Presentation:FancyWindow xmlns="https://spacestation14.io"
                           xmlns:Presentation="clr-namespace:Content.Client.Computer"
                           Title="{Loc salvage-quota-console-window-title}"
                           MinSize="400 300">
    <BoxContainer Orientation="Vertical" Margin="10">
        <Label Text="{Loc salvage-quota-console-select-mission-type}" 
               HorizontalAlignment="Center" Margin="0 0 0 10"/>
        
        <GridContainer Columns="2" HSeparationOverride="10" VSeparationOverride="5">
            <Button Name="MoneyMissionButton" Text="{Loc salvage-quota-mission-money}" />
            <Button Name="ResourcesMissionButton" Text="{Loc salvage-quota-mission-resources}" />
            <Button Name="ArtifactsMissionButton" Text="{Loc salvage-quota-mission-artifacts}" />
            <Button Name="MixedMissionButton" Text="{Loc salvage-quota-mission-mixed}" />
        </GridContainer>
        
        <BoxContainer Orientation="Vertical" Margin="0 20 0 0">
            <Label Name="StatusLabel" Text="{Loc salvage-quota-console-status-ready}" 
                   HorizontalAlignment="Center" FontColorOverride="#00FF00"/>
            
            <Label Name="SelectedMissionLabel" Text="{Loc salvage-quota-console-no-mission-selected}" 
                   HorizontalAlignment="Center" Margin="0 10 0 0"/>
        </BoxContainer>
        
        <Button Name="ActivateShuttleButton" Text="{Loc salvage-quota-console-activate-shuttle}" 
                HorizontalAlignment="Center" MinSize="200 40" Margin="0 20 0 0"/>
    </BoxContainer>
</Presentation:FancyWindow>