<DefaultWindow xmlns="https://spacestation14.io"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               x:Class="Content.Client._Sunrise.InteractionsPanel.InteractionsUIWindow"
               xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
               Title="Interactions Panel"
               MinSize="385 735">

    <PanelContainer StyleClasses="BackgroundDark">
        <BoxContainer Orientation="Vertical" Margin="2">
            <PanelContainer StyleClasses="PanelBackgroundDark" Margin="2 2 2 4">
                <Label Text="Панель взаимодействий"
                       FontColorOverride="#ffd700"
                       HorizontalAlignment="Center"
                       StyleClasses="LabelBig"
                       Margin="4 6"/>
            </PanelContainer>

            <BoxContainer Orientation="Horizontal"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         HorizontalExpand="True"
                         Margin="5 3">

                <PanelContainer Margin="4 0 8 0">
                    <BoxContainer Orientation="Vertical"
                                HorizontalAlignment="Center"
                                Margin="6 6 6 6">

                        <PanelContainer StyleClasses="BackgroundDark" Margin="0 0 0 4">
                            <SpriteView Name="UserSpriteView"
                                    OverrideDirection="South"
                                    Scale="2.0, 2.0"
                                    HorizontalAlignment="Center"
                                    Margin="5 5 5 5"/>
                        </PanelContainer>

                        <Label Name="NameUser"
                            FontColorOverride="#ffd700"
                            HorizontalAlignment="Center"
                            StyleClasses="LabelSubText"
                            Margin="0 0 0 4"/>
                    </BoxContainer>
                </PanelContainer>

                <PanelContainer Name="TargetContainer" Margin="8 0 4 0">
                    <BoxContainer Orientation="Vertical"
                                HorizontalAlignment="Center"
                                Margin="6 6 6 6">

                        <PanelContainer StyleClasses="BackgroundDark" Margin="0 0 0 4">
                            <SpriteView Name="TargetSpriteView"
                                        OverrideDirection="South"
                                        Scale="2.0, 2.0"
                                        HorizontalAlignment="Center"
                                        Margin="5 5 5 5"/>
                        </PanelContainer>

                        <Label Name="NameTarget"
                            FontColorOverride="#ffd700"
                            HorizontalAlignment="Center"
                            StyleClasses="LabelSubText"
                            Margin="0 0 0 4"/>
                    </BoxContainer>
                </PanelContainer>
            </BoxContainer>

            <controls:HSpacer Spacing="8" />

            <TabContainer Name="MainTabContainer"
                         HorizontalExpand="True"
                         VerticalExpand="True"
                         Margin="2">

                <BoxContainer Orientation="Vertical" Margin="2">
                    <BoxContainer Orientation="Horizontal" Margin="2 2 2 6">
                        <LineEdit
                            Name="SearchInput"
                            PlaceHolder="Поиск взаимодействий..."
                            HorizontalExpand="True"
                            MinHeight="24"
                            VerticalAlignment="Center"/>
                    </BoxContainer>

                    <ScrollContainer HorizontalExpand="True"
                                   VerticalExpand="True"
                                   HScrollEnabled="False">
                        <BoxContainer Name="CategoriesContainer"
                                     Orientation="Vertical"
                                     HorizontalExpand="True"
                                     VerticalExpand="True"
                                     Margin="1"/>
                    </ScrollContainer>
                </BoxContainer>

                <BoxContainer Orientation="Vertical" Margin="4">
                    <BoxContainer Orientation="Horizontal" Margin="2 2 2 6">
                        <Button Name="NewCustomInteractionButton"
                                Text="Создать новую"
                                StyleClasses="ButtonSquare"
                                HorizontalExpand="False"
                                VerticalAlignment="Center"
                                Margin="0 0 4 0"/>

                        <LineEdit
                            Name="CustomInteractionSearchInput"
                            PlaceHolder="Поиск сохраненных..."
                            HorizontalExpand="True"
                            MinHeight="24"
                            VerticalAlignment="Center"/>
                    </BoxContainer>

                    <ScrollContainer HorizontalExpand="True"
                                     VerticalExpand="True"
                                     HScrollEnabled="False">
                        <BoxContainer Name="SavedInteractionsContainer"
                                      Orientation="Vertical"
                                      HorizontalExpand="True"
                                      VerticalExpand="True"
                                      Margin="1"/>
                    </ScrollContainer>
                </BoxContainer>

                <BoxContainer Orientation="Vertical" Margin="4">

                    <BoxContainer Orientation="Vertical" Margin="2 8 2 8" VerticalExpand="True">
                        <PanelContainer Margin="0 2 0 6">
                            <BoxContainer Orientation="Horizontal" Margin="6 4" VerticalAlignment="Center">
                                <CheckBox Name="EmoteVisibilityCheckBox" Pressed="True"/>
                                <Label Text="Показывать эмоуты взаимодействий"
                                       VerticalAlignment="Center"
                                       Margin="6 0 0 0"/>
                            </BoxContainer>
                        </PanelContainer>

                        <Control VerticalExpand="True"/>

                        <Button Name="ApplySettingsButton"
                                Text="Применить"
                                StyleClasses="ButtonSquare"
                                HorizontalAlignment="Center"
                                Margin="0 4 0 2"/>
                    </BoxContainer>

                </BoxContainer>

            </TabContainer>
        </BoxContainer>
    </PanelContainer>
</DefaultWindow>
